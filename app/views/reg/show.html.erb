<div class="wrapper">
            
      <h3 style="margin-left: 49px;">View the records</h3>
       <!-- <p style="margin-left:149px;">Fill The Form Given Below</p> -->
       <table >
       		<tr>
       			<td>name</td>
       			<td>email</td>
       			<td>city</td>
       			<td>state</td>
       			<td>phone number</td>
       			<td>Address</td>

       			<td>EDIT</td>
       			<td>DElete</td>
            <td>Show</td>
            <td>Date</td>
       		</tr>
    <% unless @regusers.empty? %>
       	<% @regusers.each do |f| %>
       		<tr>
       			<td><%= f.name %></td>
       			<td><%= f.email %></td>
       			<td><%= f.city %></td>
       			<td><%= f.states %></td>
       			<td><%= f.phno %></td>
       			<td><%= f.addr %></td>

       			<td>
       				<%= link_to (image_tag 'edit.jpg', :style => "width:50px; height:50px;"), regupdate_path(f.id) %>
       			</td>

       			<td>
       				<%= link_to (image_tag 'delete.jpg', :style => "width:50px; height:50px;"), regdelete_path(f.id)  %>
              

       			</td>
            <td><%= link_to (image_tag 'delete.jpg', :style => "width:50px; height:50px;"),regshow_path(f.id)  %></td>
            <td>    <%=f.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
				</tr>
       	<% end %>
    <% else %>
    	<tr align="center">
    		<td colspan="8">No Records</td>
    	</tr>
    <% end %>

    
       </table>
 </div>




